{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "strict": false,
    "target": "es2022",
    "module": "commonjs",
    "sourceMap": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  }
}